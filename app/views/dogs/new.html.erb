<div class="d-flex align-items-center justify-content-center">
  <div class="text-start">
    <div class="form-list new-dog-form">
      <%= simple_form_for @dog do |f| %>
        <div class="form-row">
          <div class="col">
            <%=f.input :name %>
          </div>
          <div class="col">
            <%=f.input :breed %>
          </div>
        </div>
        <%=f.input :age %>
        <%=f.input :description %>
        <%=f.input :price %>
        <%=f.input :location %>
        <%# <%= f.input :photo, as: :file %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.submit 'Submit', class: 'btn btn-danger form-btn' %>
        <%= link_to 'Cancel', root_path, class: 'btn btn-outline-danger form-btn' %>
      <% end %>
    </div>
  </div>
</div>


<% if @dogs.count == 0 %>
  <h4><%= "Sorry we couldn't find any dogs matching your search!" %></h4>
<% end %>
<div class="d-flex">
  <div class="container">
    <% @dogs.each do |dog| %>
    <%= link_to dog_path(dog) do %>
    <div class="dog-card" style="text-decoraton: none;">
      <% dog.photos.each_with_index do |photo, index| %>
      <% if index == 0 %>
      <div class="image">
        <%= cl_image_tag photo.key %>
      </div>
      <% end %>
      <% end %>
      <div class="card-info" >
        <h1><a style="text-decoration: none;"><%= dog.name %></a></h1>
        <p><span style="background-color: #CCC2B8; "><strong>Breed:</strong> <%= dog.breed %></span></p>
        <p><span style="background-color: #CCC2B8"><strong>Age:</strong> <%= dog.age %></span></p>
        <p><span style="background-color: #CCC2B8"><strong>Price:</strong> <%= dog.price %> per hour</span></p>
      </div>
    </div>
    <% end  %>
    <% end  %>
  </div>
  <div style="width: 100%; height: 100vh; position:sticky;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<div class="dog-card-show">
  <div class="pic">
<!-- Carousel -->
  <div id="carouselExampleControls" class="carousel slide h-100 w-100" data-bs-ride="carousel">
<!-- Attempted code below to review with TA -->
    <div class=”carousel-inner”>
      <% @dog.photos.each_with_index do |pic, index| %>
        <div class="carousel-item <%= "active " if index==0 %>">
          <%= cl_image_tag(pic.key, width: "340px", height: "340px") %>
        </div>
      <%end%>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" style="color: black;"  aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  </div>
  <%# <%= cl_image_tag @dog.photos[0], height: 300, width: 400, crop: :fill %>
    <div class="dog-card-info">
      <h2><%=@dog.name%></h2>
      <p>Breed: <%= @dog.breed %></p>
      <p>Age: <%= @dog.age %></p>
      <p>Character: <%= @dog.description %></p>
      <p>£ <%= @dog.price %> per hour</p>
    <div class="card-buttons">
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary m-0" data-bs-toggle="modal" data-bs-target=<%= "#dog-modal-#{@dog.id}"%>>
      <%="Book #{@dog.name}"%>
      </button>
      <%= link_to "Back", url_for(:back) , class: "btn btn-primary m-0" %>
    </div>
  </div>
</div>
  <!-- Modal -->
<div class="modal fade" id=<%= "dog-modal-#{@dog.id}" %> data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby=<%= "staticBackdropLabel-#{@dog.id}" %> aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id=<%= "staticBackdropLabel-#{@dog.id}" %>><%= "Booking in Progress...."%></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h2><%= "Booking #{@dog.name}"  %></h2>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <%= link_to "Book #{@dog.name}", new_dog_booking_path(@dog), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<!-- footer -->

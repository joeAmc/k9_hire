<div class="dog-card-show mt-4">
    <div class="image">
      <%= image_tag "https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/golden-retriever-royalty-free-image-506756303-1560962726.jpg?crop=0.672xw:1.00xh;0.166xw,0&resize=640:*", alt: 'Dog', style: 'height:300px; width 250px'%>
    </div>
    <div class="card-info">
    <h2><%=@dog.name%></h2>
      <p>Owner: <%= @dog.user.first_name %></p>
      <p>Breed: <%= @dog.breed %></p>
      <p>Age: <%= @dog.age %></p>
      <p>Character: <%= @dog.description %></p>
      <p>Â£ <%= @dog.price %> per hour</p>
      <div class="card-buttons">
      <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary m-0" data-bs-toggle="modal" data-bs-target=<%= "#dog-modal-#{@dog.id}"%>>
          <%="Book #{@dog.name}"%>
        </button>
        <%= link_to "Back", dogs_path, class: "btn btn-primary m-0" %>
      </div>
    </div>
  </div>

  <!-- Carousel -->
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="..." alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="..." alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="..." alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


  <!-- Modal -->
  <div class="modal fade" id=<%= "dog-modal-#{@dog.id}" %> data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby=<%= "staticBackdropLabel-#{@dog.id}" %> aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id=<%= "staticBackdropLabel-#{@dog.id}" %>><%= "You've booked #{@dog.name}!"%></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
           <h2><%= "Booking calendar coming soon!..."  %></h2>
            <%= image_tag 'susi.jpg', alt: 'Susi', style: 'height:200px; width:auto'%>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= link_to "Book #{@dog.name}", dog_path(@dog), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>

